@model CIELO_TM.Models.CATEGORIA
@{ 
    ViewBag.Title = "Agregar Categoria";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";

}
<link href="~/Content/StyleSheet_estilosR.css" rel="stylesheet" />
@using (Html.BeginForm("GuardarCategoria", "StoreManager", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="login login-screen wrapper">
        <h2 class="app-title">AGREGAR CATEGORIA</h2>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p>NUEVA CATEGORIA</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CATEGORIA1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CATEGORIA1, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
